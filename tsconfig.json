{
    "compilerOptions": {
      "module": "ESNext",
      "target": "ES6",
      "jsx": "react",
      "declaration": true, // Generates .d.ts files
      "declarationDir": "./dist",
      "outDir": "./dist",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "moduleResolution": "node",
      "strict": true,
      "baseUrl": "./",
      "paths": {
        "*": ["node_modules/*"]
      }
    },
    "include": ["./*.ts", "./*.tsx"],
    "exclude": ["node_modules", "dist"]
  }
  